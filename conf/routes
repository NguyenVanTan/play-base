# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /login                           controllers.LoginController.login()
POST    /login                           controllers.LoginController.authenticate()

GET     /logout                          controllers.LoginController.logout()

GET     /management                      controllers.AppController.management()

GET     /userlist                        controllers.AppController.userlist()
GET     /removeUser:userId               controllers.AppController.removeUser(userId: Int)

GET     /register                        controllers.UserController.newRegister()
POST    /register                        controllers.UserController.register()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
